<h1>User info</h1>
<%= form_with model:@user, url:"/user/#{@user.id}", local:true do |f| %>
  <% if @user.errors.any? %>
  <%= @user.errors.count %>error
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

  <h6>Name</h6>
  <%= f.text_field :title %>
  <h6>image</h6>
  <%= f.attachment_field :image %>
  <h6>introduction</h6>
  <%= f.text_area :body %>
  <%= f.submit 'Update User' %>
<% end %>